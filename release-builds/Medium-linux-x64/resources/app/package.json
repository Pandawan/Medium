{
  "name": "medium",
  "productName": "Medium",
  "version": "1.0.0",
  "description": "A Medium Wrapper for Win, Mac and Linux",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "run-mac": "./node_modules/.bin/electron .",
    "build-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/Medium.icns --prune=true --out=release-builds",
    "build-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/medium.ico --prune=true --out=release-builds --version-string.CompanyName='Pandawan' --version-string.FileDescription='A Medium Wrapper for Windows' --version-string.ProductName='Medium'",
    "build-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/icon_1024x1024.png --prune=true --out=release-builds"
  },
  "keywords": [
    "medium",
    "post",
    "blog",
    "app"
  ],
  "author": "Pandawan",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.4.4",
    "electron-context-menu": "^0.6.0",
    "electron-packager": "^8.1.0",
    "install": "^0.8.1",
    "npm": "^3.10.9"
  }
}
